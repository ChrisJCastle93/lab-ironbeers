<section class='md:overflow-x-scroll'>
  <div class='container p-5 py-12 mx-auto md:p-20 max-w-7xl'>
    <div class='flex flex-wrap mx-auto md:flex-nowrap'>
          <div class='flex w-full items-stretch p-12'>
            <div
              class='relative flex flex-col items-stretch m-1 transition duration-300 ease-in-out delay-150 transform bg-white shadow-2xl rounded-xl md:w-full md:hover:-translate-x-16 md:hover:-translate-y-8 p-12'
            >
              <img
                class='object-contain object-center w-full rounded-t-xl lg:h-48 md:h-36' 
                src='{{image_url}}'
                alt='blog'
              />
              <div class='px-6 py-8'>
                <h4 class='mt-4 text-2xl font-semibold text-neutral-600'>
                  <span class=''>{{name}}
                  </span></h4>
                <p
                  class='mt-4 text-base font-normal text-gray-500 leading-relax'
                >
                  {{description}}
                </p>
                <br>
                <h4>Food Pairings:</h4>
                <ol>
                {{#each food_pairing}}
                <li
                  class='mt-4 text-base font-normal text-gray-500 leading-relax'
                ><p>
                {{this}}
                </p>

                </li>
                {{/each}}
</ol>
 <br>
                <h4>Brewer's Tip:</h4>
                <p
                  class='mt-4 text-base font-normal text-gray-500 leading-relax'
                >
                  {{brewers_tips}}
                </p>
              </div>
            </div>
          </div>
    </div>
  </div>
</section>